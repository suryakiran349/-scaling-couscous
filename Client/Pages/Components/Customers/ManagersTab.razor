@using Shared.DTOs.CRM
@using MudBlazor

<MudPaper Class="pa-4">
    <MudTable Items="Managers ?? new List<ManagerDto>()" Dense="true" Hover="true">
        <HeaderContent>
            <MudTh>Name</MudTh>
            <MudTh>Email</MudTh>
            <MudTh>Phone</MudTh>
            <MudTh>Department</MudTh>
            <MudTh>Active</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Email</MudTd>
            <MudTd>@context.Phone</MudTd>
            <MudTd>@context.Department</MudTd>
            <MudTd>
                <MudChip T="string" Color="@(context.IsActive ? Color.Success : Color.Error)">
                    @(context.IsActive ? "Yes" : "No")
                </MudChip>
            </MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No managers found.</MudText>
        </NoRecordsContent>
    </MudTable>
</MudPaper>

@code {
    [Parameter] public List<ManagerDto> Managers { get; set; } = new List<ManagerDto>();
}